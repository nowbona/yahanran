
    <!-- Page Content -->
    <div class="container" style="margin-top: 80px">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-xs-12">
                <h1 class="page-header">야한 소개
                    <small>야한 특징</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Intro Content -->
        <div class="row">
            <!--사진-->
            <div class="col-xs-7">
                <img class="img-responsive" src="/assets/about.gif" alt="">
            </div>
            
            <!--주문-->
            <form action="/home/order" method="POST">
                <div class="col-xs-5">
                    <center style="padding-bottom: 10px; border-bottom: 2px solid black">
                        <h2>야한란</h2>
                    </center>
                
                <!--주문 옵션 테이블-->
                    <table class="table" style="margin-top: 20px">
                      <tbody>
                        <!--이름-->
                        <tr>
                          <th scope="row" width="20%" style="border: none; vertical-align: middle; text-align: right" required>이름</th>
                          <td width="80%" style="border: none; vertical-align: middle">
                              <div class="btn-group" role="group" aria-label="Basic example">
                                  <input type="text" name="name" class="form-control" required>
                              </div>
                          </td>
                        </tr>
                        <!--연락처-->
                        <tr>
                          <th scope="row" width="20%" style="border: none; vertical-align: middle; text-align: right" required>연락처 <br> <small></small></th>
                          <td width="80%" style="border: none; vertical-align: middle">
                              <div class="btn-group" role="group" aria-label="Basic example">
                                <input type="tel" name="tel" class="form-control" placeholder="'-'제외 숫자만 적어주세요" required>
                                <small>(주문자확인 문자발송용)</small>
                              </div>
                          </td>
                        </tr>
                        <!--정기배송 선택-->
                        <tr>
                          <th scope="row" width="20%" style="border: none; vertical-align: middle; text-align: right"><br> <small></small></th>
                          <td width="80%" style="border: none; vertical-align: middle">
                            <div class="btn-group" data-toggle="buttons" role="group" aria-label="...">
                                    <label class="btn btn-primary" style="width: 100px" id="option3"><input type="radio" name="weeks" id="option1" value="1" checked="checked">기본</label>
                                    <label class="btn btn-primary" style="width: 100px" id="option4"><input type="radio" name="weeks" id="option2" value="3">정기배송</label>
                            </div>
                            
                            <!--allprice & 배송옵션 밑에 요일선택 or 정기배송안내 나오기 자바스크립트-->
                            <script>
                                $(document).ready(function(){
                                    $("#dayfordelivery").hide();
                                    
                                    $("#option4").click(function(){
                                        $("#dayfordelivery").hide();
                                        var totalprice = (1500*$('#eggnumber1').val());
                                        $('#price').empty();
                                        $('#price').append(totalprice+"원");
                                    });
                                    $("#option3").click(function(){
                                        $("#dayfordelivery").show();
                                        var totalprice = (500*$('#eggnumber1').val());
                                        $('#price').empty();
                                        $('#price').append(totalprice+"원");
                                    });
                                });
                            </script>
                            <script>
                                $(document).ready(function(){
                                    $("#aboutsub").hide();
                                    
                                    $("#option3").click(function(){
                                        $("#aboutsub").hide();
                                    });
                                    $("#option4").click(function(){
                                        $("#aboutsub").show();
                                    });
                                });
                            </script>
                                
                            <!--배달요일옵션-->
                            <div id="dayfordelivery" class="btn-group guide" style="margin-right: 100px" data-toggle="buttons" role="group" aria-label="...">
                                <small>배송요일</small><br>
                                <label class="btn btn-default" style="width: 50px"><input type="radio" name="day" value="mon" checked="checked">월</label>
                                <label class="btn btn-default" style="width: 50px"><input type="radio" name="day" value="thu">목</label>
                            </div>
                            <!--정기배송안내-->
                            <div id="aboutsub" class="btn-group guide" style="margin-left: 100px; padding:10px">
                                <small>매주 월요일 <br> 3주동안 배달됩니다</small><br>
                            </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>  
                        
                    <!--수량선택-->
                    <table class="table" style="margin-top: 20px">
                      <tbody>    
                        <tr>
                          <th scope="row" width="20%" style="border: none; vertical-align: middle; text-align: right">수량</th>
                          <td width="80%" style="border: none; vertical-align: middle">
                              <!--dropdown menu 되는거-->
                              <div class="form-group">
                                <select id="eggnumber1" class="form-control" name="eggnumber" type="integer" style="width: 197px">
                                    <option name="eggnumber" type="integer" value="10" selected="selected">10알 (10알 1세트)</option>
                                    <option name="eggnumber" type="integer" value="20">20알 (10알 2세트)</option>
                                    <option name="eggnumber" type="integer" value="6">6알 (6알 1세트)</option>
                                    <option name="eggnumber" type="integer" value="12">12알 (6알 2세트)</option>
                                </select>
                              </div>
                          </td>
                        </tr>
                        <!--배달장소 선택-->
                        <tr>
                          <th scope="row" width="20%" style="border: none; vertical-align: middle; text-align: right">배달장소</th>
                          <td width="80%" style="border: none; vertical-align: middle">
                              <div class="btn-group" data-toggle="buttons" role="group" aria-label="...">
                                <label class="btn btn-default"><input type="radio" name="place" value="기숙사" checked="checked">기숙사 택배실</label>
                                <label class="btn btn-default"><input type="radio" name="place" value="공학관">2공학관 엘리베이터앞</label>
                            </div>
                          </td>
                        </tr>
                        <!--요청사항-->
                        <tr>
                          <th scope="row" width="20%" style="border: none; vertical-align: middle; text-align: right">기타 요청사항</th>
                          <td width="80%" style="border: none; vertical-align: middle">
                              <div class="btn-group" role="group" aria-label="Basic example">
                                  <input type="text" name="message" class="form-control">
                              </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                    
                <!--총가격 -->
                    <!--allprice 계산 자바 eggnumber * price-->
                    <script type="text/javascript">
                        $(document).ready(function(){
                            $('#eggnumber1').on('click',function(e){
                                var checkedweeks = $("input[type=radio][name=weeks]:checked").val();
                                var setprice = (500*$('#eggnumber1').val());
                                var totalprice = checkedweeks*setprice 
                                $('#price').empty();
                                $('#price').append(totalprice+"원");
                            });
                        });
                    </script>
                    
                    <!--총가격 출력-->
                    <div style="text-align: right; border-top: 2px solid #BDBDBD; padding-top: 20px">
                        <h4 style="margin-right: 20px"><span>총 가격 : </span>
                        <span id="price" name="price">5000원</span></h4>
                    </div>
                    <div style="margin-right: 20px; margin-top: 15px">
                        <button type="submit" class="btn btn-default btn-lg" style="float: right">주문하기</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- 상세설명 -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">상세설명</h2>
            </div>
            <div class="col-xs-12 text-center">
                <div  align="center">
                    <img class="img-responsive" src="/assets/web1.gif" alt="" style="max-width:800px">
                    <img class="img-responsive" src="/assets/web2.gif" alt="" style="max-width:800px">
                    <img class="img-responsive" src="/assets/web3.gif" alt="" style="max-width:800px">
                </div>
            </div>
        </div>
        <hr>
    </div>

    <!-- jQuery -->
    <script src="/assets/jquery.js"></script>
